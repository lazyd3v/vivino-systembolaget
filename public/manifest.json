{
  "name": "Vivino rating for Systembolaget",
  "version": "1.0",
  "description": "Show wine rating on systembolaget website",
  "manifest_version": 2,
  "permissions": ["*://www.vivino.com/*", "unlimitedStorage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.systembolaget.se/*"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "scripts": ["bgScript.js"],
    "persistent": false
  }
}
